// Tests for module_b functions

// Test process function (multiplies by 3)
std test_process(): bool {
    c result1 = process(5)
    c result2 = process(0)
    c result3 = process(10)

    c check1 = eqi64(result1, 15)
    c check2 = eqi64(result2, 0)
    c check3 = eqi64(result3, 30)

    and(and(check1, check2), check3)
}

// Test compute function (a - b + 50)
std test_compute(): bool {
    c result1 = compute(10, 20)
    c result2 = compute(0, 0)
    c result3 = compute(100, 50)

    c check1 = eqi64(result1, 40)
    c check2 = eqi64(result2, 50)
    c check3 = eqi64(result3, 100)

    and(and(check1, check2), check3)
}

// Test transform function (returns cube)
std test_transform(): bool {
    c result1 = transform(4)
    c result2 = transform(0)
    c result3 = transform(3)

    c check1 = eqi64(result1, 64)
    c check2 = eqi64(result2, 0)
    c check3 = eqi64(result3, 27)

    and(and(check1, check2), check3)
}

// Test get_value function (returns 99)
std test_get_value(): bool {
    c result = get_value()
    eqi64(result, 99)
}

// Test process_and_transform (process then transform)
// process(3) = 9, transform(9) = 729
std test_process_and_transform(): bool {
    c result1 = process_and_transform(3)
    c result2 = process_and_transform(2)

    c check1 = eqi64(result1, 729)
    c check2 = eqi64(result2, 216)

    and(check1, check2)
}
